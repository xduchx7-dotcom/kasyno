// ==== DANE KASYNOWE ====
let kasa = {
    gracze: [],  // { nick: "Vexxiann", kwota: 100 }
    suma: 0
};

// Funkcja dodająca wpłatę
function dodajWplate(nick, kwota) {
    kwota = Number(kwota);
    if (!nick || isNaN(kwota) || kwota <= 0) return;

    // Sprawdź czy gracz już jest na liście
    let gracz = kasa.gracze.find(g => g.nick === nick);
    if (gracz) {
        gracz.kwota += kwota;
    } else {
        kasa.gracze.push({ nick, kwota });
    }

    // Aktualizuj sumę puli
    kasa.suma = kasa.gracze.reduce((acc, g) => acc + g.kwota, 0);

    // Odśwież panel
    odswiezPanel();
}

// Funkcja odświeżająca panel w HTML
function odswiezPanel() {
    // Lista graczy
    const lista = document.getElementById("gracze-lista");
    if (lista) {
        lista.innerHTML = kasa.gracze.map(g => `<li>${g.nick}: $${g.kwota}</li>`).join("");
    }

    // Suma w puli
    const pula = document.getElementById("suma-puli");
    if (pula) {
        pula.textContent = `$${kasa.suma}`;
    }
}

// ==== PRZYKŁADOWE WYWOŁANIE ====
dodajWplate("Vexxiann", 100); // symuluje wpłatę 100$
